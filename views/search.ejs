                <label><input type="checkbox" name="gyeonggi" value="양주"> 양주</label>
                <label><input type="checkbox" name="gyeonggi" value="양평"> 양평</label>
                <label><input type="checkbox" name="gyeonggi" value="여주"> 여주</label>
